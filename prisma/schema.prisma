datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String     @id @default(uuid())
  name        String
  brand       String?
  condition   String?
  category    String?
  image       String?
  description String
  price       Int
  size        String?
  gender      String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}